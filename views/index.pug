block content
  .main.container
    .row
      .col-md-6.col-md-offset-3
        h1.display-4.m-b-2 Add Phone
          h2
          form(method='POST' action='/addPhoneNumber')
            div.form-group
              label(for='phoneNumber') PhoneNumber:
              input#name.form-control(type='text', placeholder='(04) 1234 5678' name='phoneNumber' required=true)
            div.form-group
              label(for='name') Name:
              input#email.form-control(type='text', placeholder='Name' name='name' required=true)
            button.btn.btn-primary(type='submit') Add
            -if (messageNewPhone)
              li=messageNewPhone
        ul
        br
        h1.display-4.m-b-2 Search By Name
          h2
          form(method='POST' action='/searchByName')
            div.form-group
              label(for='searchName') Name:
              input#searchName.form-control(type='text', placeholder='name' name='searchName' required=true)
              button.btn.btn-primary(type='submit') Search
        ul
        br
        h1.display-4.m-b-2 Get all names
          h2
          form(method='GET' action='/refresh')
            button.btn.btn-primary(type='refresh') Refresh All
            ul
            br
            -if (phoneNumbers)
              each item in phoneNumbers
                li= 'Phone: ' + item.phoneNumber + ' | Name: ' + item.customerName